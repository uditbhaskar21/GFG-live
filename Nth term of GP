public class nthTermOFgp {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b = sc.nextInt();
        int n = sc.nextInt();
        System.out.println((int)Math.floor(gp(a,b,n)));

    }
    static double gp(int a, int b,int n){
        double r = ((double)b)/a;
        return (a*Math.pow(r,n-1));
    }
}
